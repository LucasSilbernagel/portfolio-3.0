---
import '../styles/global.css'

export type Props = {
  title?: string
}

const { title = 'Lucas Silbernagel | Software Developer' } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Personal website and software development portfolio for Lucas Silbernagel"
    />
    <title>{title}</title>

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="bg-terminal-dark-gray font-sans text-terminal-white antialiased">
    <div class="flex min-h-screen flex-col">
      <!-- Main Content -->
      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-gray-600 bg-terminal-dark-gray p-4">
        <div class="container mx-auto text-center text-sm text-gray-400">
          <p>
            Built by <a
              href="https://github.com/LucasSilbernagel/portfolio-3.0"
              target="_blank"
              rel="noopener noreferrer"
              class="underline hover:text-terminal-white">Lucas Silbernagel</a
            >
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
