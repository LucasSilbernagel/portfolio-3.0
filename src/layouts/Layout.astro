---
import '../styles/global.css'
import Footer from '../components/Footer.astro'
import { formatImageUrlWithSize, safeFetchSingleType } from '../lib/strapi'
import type { SocialShareImageContent } from '../types/strapi'

export type Props = {
  title?: string
  description?: string
}

const {
  title = 'Lucas Silbernagel | Software Developer',
  description = 'Personal website and software development portfolio for Lucas Silbernagel',
} = Astro.props

// Fetch social share image from Strapi
const socialShareImage = await safeFetchSingleType<SocialShareImageContent>({
  endpoint: 'social-share-image',
  contentTypeName: 'social share image',
  populate: 'socialShareImage', // Only populate the socialShareImage field for better performance
})

// OG images standard size is 1200x630px, so optimize for 1200px width
const OG_IMAGE_OPTIMIZED_WIDTH = 1200
const socialShareImageUrl = socialShareImage?.socialShareImage
  ? formatImageUrlWithSize(
      socialShareImage.socialShareImage,
      OG_IMAGE_OPTIMIZED_WIDTH,
      'webp'
    )
  : undefined

const siteUrl = Astro.site?.href || 'https://lucassilbernagel.com'
const pageUrl = new URL(Astro.url.pathname, siteUrl).href

const ogImageUrl = socialShareImageUrl
  ? socialShareImageUrl.startsWith('http')
    ? socialShareImageUrl
    : new URL(socialShareImageUrl, siteUrl).href
  : undefined
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Resource hints - placed early to establish connections ASAP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {
      ogImageUrl && (
        <>
          <meta property="og:image" content={ogImageUrl} />
          <meta property="og:image:alt" content={description} />
        </>
      )
    }

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}

    <!-- Load Google Fonts asynchronously to avoid render blocking -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      />
    </noscript>
  </head>
  <body class="bg-terminal-dark-gray font-sans text-terminal-white antialiased">
    <div class="flex min-h-screen flex-col">
      <!-- Main Content -->
      <main class="flex-1">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
