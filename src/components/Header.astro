---
import { Icon } from 'astro-icon/components'
import fetchApi, { formatImageUrl } from '../lib/strapi'
import type { ProfilePhotoContent } from '../types/strapi'

export type Props = {
  showBackButton?: boolean
  id?: string
}

const { showBackButton = false, id } = Astro.props

let profilePhoto: ProfilePhotoContent | null = null

try {
  profilePhoto = await fetchApi<ProfilePhotoContent | null>({
    endpoint: 'profile-photo',
    query: {
      populate: '*',
    },
    wrappedByKey: 'data',
  })
} catch (error) {
  // eslint-disable-next-line no-console
  console.warn(
    `Failed to fetch profile photo from Strapi: ${error instanceof Error ? error.message : String(error)}..`
  )
}

const profileImage = profilePhoto?.image
const profilePhotoUrl = profileImage ? formatImageUrl(profileImage) : ''
const profilePhotoAlt =
  profileImage?.alternativeText || profileImage?.name || 'Lucas Silbernagel'
---

<header
  id={id}
  class="w-full border-b-4 border-terminal-blue bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 px-8 py-6"
>
  <div
    class="container mx-auto flex flex-col items-center justify-between gap-6 sm:gap-4 md:flex-row"
  >
    <a
      href="/"
      class="flex flex-wrap items-center justify-center gap-6 transition-opacity duration-200 hover:opacity-90 focus-visible:opacity-90 sm:justify-start"
    >
      <div
        class="flex h-16 w-16 items-center justify-center overflow-hidden rounded-full border-4 border-white shadow-lg"
      >
        <img
          src={profilePhotoUrl}
          alt={profilePhotoAlt}
          class="h-16 w-16 rounded-full object-cover"
        />
      </div>
      <div class="flex flex-col items-center sm:items-start">
        <h1 class="text-2xl font-bold text-terminal-white md:text-3xl">
          Lucas Silbernagel
        </h1>
        <p class="text-lg font-semibold text-terminal-yellow md:text-xl">
          Software Developer
        </p>
      </div>
    </a>

    <!-- Right side: Back button -->
    {
      showBackButton && (
        <div class="flex items-center">
          <a
            href="/"
            class="kiosk-button flex items-center px-8 py-4 text-lg font-bold uppercase text-white transition-all duration-200 hover:scale-105 focus-visible:scale-105 active:scale-95"
          >
            <Icon name="mdi:arrow-back" /> <span class="ml-2">Back</span>
          </a>
        </div>
      )
    }
  </div>
</header>

<style>
  .kiosk-button {
    display: flex;
  }

  @media (prefers-reduced-motion: reduce) {
    header a {
      transition: none;
    }

    header a:hover,
    header a:focus {
      opacity: 1;
    }
  }
</style>
