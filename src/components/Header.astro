---
export type Props = {
  showBackButton?: boolean
  id?: string
}

const { showBackButton = false, id } = Astro.props
---

<header
  id={id}
  class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 px-8 py-6 border-terminal-blue border-b-4 w-full"
>
  <div
    class="flex md:flex-row flex-col justify-between items-center gap-6 sm:gap-4 mx-auto container"
  >
    <a
      href="/"
      class="flex flex-wrap justify-center sm:justify-start items-center gap-6 hover:opacity-90 focus-visible:opacity-90 transition-opacity duration-200"
    >
      <div
        class="flex justify-center items-center shadow-lg border-4 border-white rounded-full w-16 h-16 overflow-hidden"
      >
        <img
          src="https://placehold.co/400x400"
          alt="Lucas Silbernagel"
          class="rounded-full w-16 h-16 object-cover"
        />
      </div>
      <div class="flex flex-col items-center sm:items-start">
        <h1 class="font-bold text-terminal-white text-2xl md:text-3xl">
          Lucas Silbernagel
        </h1>
        <p class="font-semibold text-terminal-yellow text-lg md:text-xl">
          Software Developer
        </p>
      </div>
    </a>

    <!-- Right side: Back button (only shown if showBackButton is true) -->
    {
      showBackButton && (
        <div class="flex items-center">
          <a
            href="/"
            class="inline-block px-8 py-4 font-bold text-white text-lg uppercase hover:scale-105 focus-visible:scale-105 active:scale-95 transition-all duration-200 kiosk-button"
          >
            ‚Üê Back
          </a>
        </div>
      )
    }
  </div>
</header>
