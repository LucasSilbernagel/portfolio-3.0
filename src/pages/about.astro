---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import PageWrapper from '../components/PageWrapper.astro'
import PageHeader from '../components/PageHeader.astro'
import fetchApi, { formatImageUrl } from '../lib/strapi'
import type { AboutPageContent } from '../types/strapi'

let strapiResponse: AboutPageContent | null

try {
  strapiResponse = await fetchApi<AboutPageContent | null>({
    endpoint: 'about-page',
    query: {
      populate: '*',
    },
    wrappedByKey: 'data',
  })
} catch (error) {
  throw new Error(
    `Failed to fetch content from Strapi: ${error instanceof Error ? error.message : String(error)}. Make sure Strapi is running and the About Page content type has public permissions enabled.`
  )
}

if (!strapiResponse) {
  throw new Error(
    'About page content not found in Strapi. Please:\n1. Create and publish the content in the Strapi admin panel\n2. Go to Settings > Users & Permissions Plugin > Roles > Public\n3. Enable "find" permission for "About Page"'
  )
}

// For single types in Strapi v5, fields are returned directly without an attributes wrapper
// Validate required fields
if (!strapiResponse.title) {
  throw new Error('About page title is required')
}

if (!strapiResponse.description) {
  throw new Error('Description is required')
}

// Extract image URLs and alt text from media structure
const imageData = strapiResponse.images.map((image) => {
  if (!image) {
    throw new Error('Image data is missing')
  }
  return {
    src: formatImageUrl(image),
    alt: image.alternativeText || image.name || '',
  }
})

const POSITION_CLASSES = [
  '-top-28 -left-2 sm:-top-48 sm:-left-6 lg:-top-1/3 lg:-left-32', // top-left
  '-top-28 -right-2 sm:-top-48 sm:-right-6 lg:-top-1/3 lg:-right-32', // top-right
  '-bottom-36 -left-2 sm:-bottom-48 sm:-left-6 lg:-bottom-1/3 lg:-left-32', // bottom-left
  '-right-2 -bottom-36 sm:-bottom-48 sm:-right-6 lg:-right-32 lg:-bottom-1/3', // bottom-right
] as const

const FADE_IN_IMAGE_CLASSES = [
  'fade-in-image-3', // top-left
  'fade-in-image-4', // top-right
  'fade-in-image-5', // bottom-left
  'fade-in-image-6', // bottom-right
] as const

const getPositionClasses = (index: number): string => {
  return POSITION_CLASSES[index] || ''
}

const getFadeInClass = (index: number): string => {
  return FADE_IN_IMAGE_CLASSES[index] || ''
}

// Type for Blocks content structure
type BlockType = {
  type: string
  children?: Array<{ text?: string }>
}
---

<Layout title="Lucas Silbernagel | About">
  <Header showBackButton={true} />
  <PageWrapper class="p-4">
    <PageHeader
      title="About Me"
      titleClass="fade-in-1 mb-4 text-4xl font-bold text-white md:text-5xl"
    />

    <div class="mx-auto mb-48 mt-36 max-w-6xl">
      <div class="my-16 mt-28 flex justify-center">
        <div
          class="kiosk-tile fade-in-2 relative m-0 max-w-screen-md p-0 sm:p-8"
        >
          {
            imageData.map((image, index) => (
              <div
                class={`${getPositionClasses(index)} ${getFadeInClass(index)} terminal-glow absolute z-10 mx-auto mb-6 flex h-36 w-36 items-center justify-center rounded-full bg-terminal-blue shadow-lg sm:h-60 sm:w-60`}
              >
                <img
                  class="h-full w-full rounded-full object-cover"
                  src={image.src}
                  alt={image.alt}
                />
              </div>
            ))
          }
          <div
            class="space-y-4 px-2 pb-6 pt-6 text-base text-gray-600 sm:px-24 sm:pb-16 sm:text-lg"
          >
            <p class="text-center text-2xl font-bold text-black sm:text-3xl">
              {strapiResponse.title}
            </p>
            {
              typeof strapiResponse.description === 'string' ? (
                <div set:html={strapiResponse.description} />
              ) : Array.isArray(strapiResponse.description) ? (
                strapiResponse.description.map((block: unknown) => {
                  // Handle Blocks content structure
                  if (
                    typeof block === 'object' &&
                    block !== null &&
                    'type' in block
                  ) {
                    const blockObj = block as BlockType
                    if (blockObj.type === 'paragraph' && blockObj.children) {
                      return (
                        <p>
                          {blockObj.children
                            .map((child) => child.text || '')
                            .join('')}
                        </p>
                      )
                    }
                  }
                  return null
                })
              ) : (
                <p>{String(strapiResponse.description)}</p>
              )
            }
            <p class="text-sm italic">
              Inspired by my love of travel, the design of this website mimics
              the user interface of an airport check-in terminal.
            </p>
          </div>
        </div>
      </div>
    </div>
  </PageWrapper>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .fade-in-1,
    .fade-in-2,
    .fade-in-image-3,
    .fade-in-image-4,
    .fade-in-image-5,
    .fade-in-image-6 {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* Fade-in animations with staggered delays */
  .fade-in-1 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 0ms;
  }

  .fade-in-2 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 300ms;
  }

  .fade-in-image-3 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 600ms;
  }

  .fade-in-image-4 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 750ms;
  }

  .fade-in-image-5 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 900ms;
  }

  .fade-in-image-6 {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 1050ms;
  }
</style>
