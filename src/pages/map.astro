---
import Layout from '../layouts/Layout.astro'
import TerminalButton from '../components/TerminalButton.astro'
import Header from '../components/Header.astro'
---

<Layout title="Lucas Silbernagel | Travel Map">
  <Header showBackButton={true} />
  <div
    class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800"
  >
    <div class="container mx-auto px-4 py-12">
      <div class="mb-8 text-center">
        <h1 class="mb-4 text-4xl font-bold text-white md:text-5xl">
          ğŸ—ºï¸ Travel Map
        </h1>
        <p class="font-terminal text-xl text-gray-300">
          Countries I've visited
        </p>
      </div>

      <div class="mx-auto max-w-7xl">
        <div class="mb-6 flex justify-center">
          <TerminalButton href="/" variant="secondary" size="md">
            ğŸ  Back to Home
          </TerminalButton>
        </div>

        <div class="terminal-card p-4 md:p-8">
          <div
            class="relative overflow-hidden rounded-lg"
            style="min-height: 600px;"
          >
            <iframe
              src="https://visitedplaces.com/"
              class="h-full w-full border-0"
              style="min-height: 600px;"
              title="Travel Map - Places Visited"
              allowfullscreen
              loading="lazy"></iframe>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-400">
            Map powered by{' '}
            <a
              href="https://visitedplaces.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-terminal-blue underline hover:text-blue-400"
            >
              visitedplaces.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .terminal-card {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
</style>
