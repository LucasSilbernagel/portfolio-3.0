---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
---

<Layout title="Lucas Silbernagel | Travel Map">
  <Header showBackButton={true} />
  <div
    class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 min-h-screen"
  >
    <div class="mx-auto px-4 py-12 container">
      <div class="mb-8 text-center">
        <h1 class="mb-4 font-bold text-white text-4xl md:text-5xl">Map</h1>
        <p class="font-terminal text-gray-300 text-xl">
          Countries I've visited
        </p>
      </div>

      <div class="mx-auto max-w-6xl">
        <div class="p-4 md:p-8 terminal-card">
          <div class="relative rounded-lg overflow-hidden">
            <iframe
              src="https://visitedplaces.com/embed/?map=world&projection=geoOrthographic&theme=dark-green&water=1&graticule=0&names=1&duration=2000&placeduration=100&slider=0&autoplay=1&autozoom=none&autostep=1&home=CA&places=North%20America~US_MX~1.6_-100.6_44.4_100.6_-44.4*Europe~CH_GB_FR_DE_IT_VA_GR_ES~2.4_12.1_53.3_-12.1_-53.3*Asia~TH_KH_VN~1.5_83.8_33.3_-83.8_-33.3"
              style="width: 100%; height: 600px;"></iframe>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-gray-400 text-sm">
            Map powered by{' '}
            <a
              href="https://visitedplaces.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-terminal-blue hover:text-blue-400 underline"
            >
              visitedplaces.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .terminal-card {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
</style>
