---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'

const TIMELINE_ANIMATION_DELAY_MS = 150
const timelineData = [
  {
    year: 2025,
    title: 'Senior Software Engineer',
    company: 'theScore',
    period: 'March 2025 - Present',
    type: 'work',
    description:
      'Drove accelerated market entry for theScore Casino web application, launching two months ahead of schedule. Spearheaded development for high-value casino features including the complex In-House Jackpots system.',
    highlights: [
      'Launched casino application 2 months ahead of schedule',
      'Introduced Rive animation framework to the repository',
      'Developed animated cash rolodex component for the lobby',
      'Enhanced web platform scalability through architectural RFCs',
      'Implemented centralized persistence management solution',
    ],
  },
  {
    year: 2024,
    title: 'Software Developer',
    company: 'theScore',
    period: 'March 2024 - March 2025',
    type: 'work',
    description:
      'Led web development for Hollywood Casino application launch on Next.js, resulting in deployment six weeks ahead of schedule and enabling immediate revenue generation.',
    highlights: [
      'Deployed Hollywood Casino 6 weeks ahead of schedule',
      'Engineered critical casino promo credits features',
      'Created Casino Client Page Load Performance dashboard',
      'Handled 8 non-production and 2 production deployments',
      'Championed web accessibility and development standards',
    ],
  },
  {
    year: 2024,
    title: 'Word Game DB v2',
    company: 'Personal Project',
    period: '2024',
    type: 'project',
    description:
      'Modernized the original MERN stack Word Game DB application using Next.js for both frontend and backend with new functionality and endpoints.',
    highlights: [
      'Built with Next.js, React, MongoDB, TypeScript',
      'Added new REST API endpoints and functionality',
      'Improved performance and developer experience',
      'Deployed with modern CI/CD pipeline',
    ],
  },
  {
    year: 2024,
    title: 'Housing Solver',
    company: 'Personal Project',
    period: '2024',
    type: 'project',
    description:
      'Created an incremental clicker game about solving the affordable housing crisis, featuring complex economic simulation and engaging gameplay mechanics.',
    highlights: [
      'Built with React, Vite, TypeScript, Zustand',
      'Implemented complex economic simulation logic',
      'Used TanStack Router for navigation',
      'Styled with Tailwind CSS and Radix UI',
    ],
  },
  {
    year: 2023,
    title: 'Software Developer II',
    company: 'Xanadu',
    period: 'January 2023 - March 2024',
    type: 'work',
    description:
      'Enhanced the Xanadu.ai website by implementing server-side rendering, image optimization, and several new pages. Migrated PennyLane.ai website to modern development framework.',
    highlights: [
      'Implemented server-side rendering and image optimization',
      'Integrated Xanadu merchandise shop using Shopify APIs',
      'Migrated PennyLane.ai from Python templating to Gatsby',
      'Led front-end development of Generic Datasets project',
      'Built with React, TypeScript, and Tailwind CSS',
    ],
  },
  {
    year: 2023,
    title: 'Decision Tree',
    company: 'Personal Project',
    period: '2023',
    type: 'project',
    description:
      'Built a simple generator of shareable and accessible decision trees with data serialization in URLs for easy sharing.',
    highlights: [
      'Built with React, Remix, TypeScript',
      'Implemented URL-based data serialization',
      'Created accessible decision tree interface',
      'Used shadcn/ui for consistent design',
    ],
  },
  {
    year: 2023,
    title: 'Blizzard Rush',
    company: 'Personal Project',
    period: '2023',
    type: 'project',
    description:
      'Developed a Shopify development store for snowboard sales with Remix frontend and Shopify API integration.',
    highlights: [
      'Integrated Shopify APIs with Remix frontend',
      'Built with React, TypeScript, Tailwind CSS',
      'Used Zustand for state management',
      'Implemented TanStack Query for data fetching',
    ],
  },
  {
    year: 2023,
    title: 'Super Simon',
    company: 'Personal Project',
    period: '2023',
    type: 'project',
    description:
      'Created a Progressive Web App version of the classic Simon memory game with offline capabilities and comprehensive testing.',
    highlights: [
      'Built Progressive Web App with offline support',
      'Included unit tests with Jest and React Testing Library',
      'Added e2e tests with Playwright',
      'Integrated Firebase for data persistence',
    ],
  },
  {
    year: 2020,
    title: 'Web Development Bootcamp',
    company: 'Lighthouse Labs',
    period: '2020',
    type: 'education',
    description:
      'Completed intensive web development bootcamp covering full-stack JavaScript development, React, Node.js, and modern development practices.',
    highlights: [
      'Learned full-stack JavaScript development',
      'Mastered React and Node.js fundamentals',
      'Built multiple full-stack applications',
      'Gained experience with modern development tools',
    ],
  },
]
---

<Layout title="Lucas Silbernagel | Timeline">
  <Header showBackButton={true} />
  <div
    class="bg-gradient-to-br from-terminal-dark-gray via-gray-800 to-terminal-blue min-h-screen"
  >
    <div class="mx-auto px-4 py-12 container">
      <div class="mb-12 text-center">
        <h1 class="mb-4 font-bold text-white text-4xl md:text-5xl">Timeline</h1>
        <p class="font-terminal text-gray-300 text-xl">
          Career Timeline & Professional Milestones
        </p>
      </div>

      <div class="mx-auto max-w-6xl">
        <div class="p-8 terminal-card">
          <div class="space-y-6">
            {
              timelineData.map((item, index) => (
                <div
                  class="pb-6 pl-6 border-terminal-blue border-l-4 animate-timeline-entry"
                  style={`animation-delay: ${index * TIMELINE_ANIMATION_DELAY_MS}ms`}
                >
                  <div class="flex md:flex-row flex-col md:justify-between md:items-start">
                    <div class="flex-1">
                      <div class="flex items-center space-x-3 mb-2">
                        <div
                          class={`h-3 w-3 rounded-full ${
                            item.type === 'work'
                              ? 'bg-terminal-blue'
                              : item.type === 'project'
                                ? 'bg-terminal-success-green'
                                : 'bg-terminal-yellow'
                          }`}
                        />
                        <span class="font-terminal text-gray-500 text-sm uppercase tracking-wide">
                          {item.type === 'work'
                            ? 'WORK'
                            : item.type === 'project'
                              ? 'PROJECT'
                              : 'EDUCATION'}
                        </span>
                      </div>
                      <h3 class="mb-1 font-bold text-terminal-dark-gray text-xl">
                        {item.title}
                      </h3>
                      <p class="mb-2 font-semibold text-terminal-blue">
                        {item.company}
                      </p>
                      <p class="mb-3 text-gray-500 text-sm">{item.period}</p>
                      <p class="mb-4 text-gray-600">{item.description}</p>
                    </div>

                    <div class="mb-4 md:mb-0 md:ml-6">
                      <div class="bg-terminal-blue px-4 py-2 rounded-lg text-white text-center">
                        <div class="font-bold text-2xl">{item.year}</div>
                      </div>
                    </div>
                  </div>

                  <div class="mt-4">
                    <h4 class="mb-2 font-semibold text-terminal-dark-gray text-sm uppercase tracking-wide">
                      Key Achievements:
                    </h4>
                    <ul class="space-y-1">
                      {item.highlights.map((highlight) => (
                        <li class="flex items-start space-x-2 text-gray-600 text-sm">
                          <span class="mt-1 text-terminal-success-green">
                            â€¢
                          </span>
                          <span>{highlight}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .animate-timeline-entry {
    animation: slideInLeft 0.6s ease-out forwards;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
