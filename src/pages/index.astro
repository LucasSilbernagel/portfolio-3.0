<script>
  // First-time visitor logic
  document.addEventListener('DOMContentLoaded', () => {
    const landingScreen = document.querySelector('#landing-screen')
    const homepage = document.querySelector('#homepage')
    const homepageHeader = document.querySelector('#homepage-header')
    const homepageFooter = document.querySelector('#homepage-footer')
    const hasVisited = sessionStorage.getItem('portfolio-visited')

    // Check if user has visited before
    if (hasVisited === 'true') {
      // Show homepage for returning visitors
      if (landingScreen) (landingScreen as HTMLElement).style.display = 'none'
      if (homepage) homepage.classList.remove('hidden')
      if (homepageHeader) homepageHeader.classList.remove('hidden')
      if (homepageFooter) homepageFooter.classList.remove('hidden')
    } else {
      // Show landing screen for first-time visitors
      if (landingScreen) (landingScreen as HTMLElement).style.display = 'block'
      if (homepage) homepage.classList.add('hidden')
      if (homepageHeader) homepageHeader.classList.add('hidden')
      if (homepageFooter) homepageFooter.classList.add('hidden')
    }

    // Initialize landing screen interactions
    initializeLandingScreen()

    // Initialize homepage interactions
    initializeHomepage()
  })

  function initializeLandingScreen() {
    const checkInButton = document.querySelector('#check-in-button')

    // Check-in button click handler
    if (checkInButton) {
      checkInButton.addEventListener('click', (e) => {
        e.preventDefault()
        // Mark as visited and show loading transition
        sessionStorage.setItem('portfolio-visited', 'true')
        showLoadingTransition()
      })
    }
  }

  function initializeHomepage() {
    const tiles = document.querySelectorAll('.kiosk-tile')
    const TILE_ANIMATION_DELAY_MS = 150

    for (const [index, tile] of tiles.entries()) {
      // Stagger animation on load
      setTimeout(() => {
        ;(tile as HTMLElement).style.opacity = '1'
        ;(tile as HTMLElement).style.transform = 'translateY(0)'
      }, index * TILE_ANIMATION_DELAY_MS)
    }

    // Boarding pass download handler
    const boardingPassButton = document.querySelector('#boarding-pass-download')
    if (boardingPassButton) {
      boardingPassButton.addEventListener('click', () => {
        const link = document.createElement('a')
        link.href = '/resume.pdf'
        link.download = 'lucas-silbernagel-resume.pdf'
        document.body.append(link)
        link.click()
        link.remove()
      })
    }
  }

  // Loading transition function
  function showLoadingTransition() {
    const LOADING_TRANSITION_DURATION_MS = 3000
    // Create loading overlay
    const loadingOverlay = document.createElement('div')
    loadingOverlay.className =
      'fixed inset-0 bg-terminal-dark-gray z-50 flex flex-col justify-center items-center'
    loadingOverlay.innerHTML = `
			<div class="text-center">
				<div class="mb-8 text-8xl animate-spin">‚úàÔ∏è</div>
				<div class="mb-8 font-terminal text-terminal-success-green text-2xl">
					Checking in...
				</div>
				<div class="bg-terminal-dark-gray border-2 border-terminal-blue rounded-full w-80 h-4 overflow-hidden">
					<div class="bg-terminal-blue h-full animate-progress-bar"></div>
				</div>
			</div>
		`

    document.body.append(loadingOverlay)

    // Show homepage after animation
    setTimeout(() => {
      const landingScreen = document.querySelector('#landing-screen')
      const homepage = document.querySelector('#homepage')
      const homepageHeader = document.querySelector('#homepage-header')
      const homepageFooter = document.querySelector('#homepage-footer')

      if (landingScreen) (landingScreen as HTMLElement).style.display = 'none'
      if (homepage) homepage.classList.remove('hidden')
      if (homepageHeader) homepageHeader.classList.remove('hidden')
      if (homepageFooter) homepageFooter.classList.remove('hidden')

      // Remove loading overlay
      loadingOverlay.remove()
      // Initialize homepage animations
      initializeHomepage()
    }, LOADING_TRANSITION_DURATION_MS)
  }
</script>

<style>
  @keyframes progressBar {
    0% {
      width: 0%;
    }
    100% {
      width: 100%;
    }
  }

  .animate-progress-bar {
    animation: progressBar 2.5s ease-in-out;
  }

  .kiosk-tile {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.3s ease-in-out;
  }

  .group:hover .kiosk-tile {
    transform: translateY(-5px);
  }
</style>
