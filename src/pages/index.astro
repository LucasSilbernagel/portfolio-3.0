---
import '../styles/global.css'
import airplaneBackground from '../assets/airplane-background.jpg'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import HomepageCard from '../components/HomepageCard.astro'
import {
  formatImageUrl,
  getStrapiMedia,
  safeFetchSingleType,
} from '../lib/strapi'
import type {
  ProfilePhotoContent,
  ResumeContent,
  SocialShareImageContent,
} from '../types/strapi'

const profilePhoto = await safeFetchSingleType<ProfilePhotoContent>({
  endpoint: 'profile-photo',
  contentTypeName: 'profile photo',
})

const profileImage = profilePhoto?.image
const profilePhotoUrl = profileImage ? formatImageUrl(profileImage) : ''
const profilePhotoAlt =
  profileImage?.alternativeText || profileImage?.name || 'Lucas Silbernagel'

const resume = await safeFetchSingleType<ResumeContent>({
  endpoint: 'resume',
  contentTypeName: 'resume',
})

const resumeUrl = resume?.Resume ? getStrapiMedia(resume.Resume.url) : null
const resumeFileName = resume?.Resume?.name || 'lucas-silbernagel-resume.pdf'

// Fetch social share image from Strapi
const socialShareImage = await safeFetchSingleType<SocialShareImageContent>({
  endpoint: 'social-share-image',
  contentTypeName: 'social share image',
})

const socialShareImageUrl = socialShareImage?.socialShareImage
  ? formatImageUrl(socialShareImage.socialShareImage)
  : undefined

const siteUrl = Astro.site?.href || 'https://lucassilbernagel.com'
const pageUrl = new URL(Astro.url.pathname, siteUrl).href

const ogImageUrl = socialShareImageUrl
  ? socialShareImageUrl.startsWith('http')
    ? socialShareImageUrl
    : new URL(socialShareImageUrl, siteUrl).href
  : undefined

const title = 'Lucas Silbernagel | Software Developer'
const description =
  'Personal website and software development portfolio for Lucas Silbernagel'
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {
      ogImageUrl && (
        <>
          <meta property="og:image" content={ogImageUrl} />
          <meta property="og:image:alt" content={description} />
        </>
      )
    }

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Preload critical background image -->
    <link rel="preload" as="image" href={airplaneBackground.src} />
  </head>
  <body class="bg-terminal-dark-gray font-sans text-terminal-white antialiased">
    <div class="flex min-h-screen flex-col">
      <main class="flex-1">
        <!-- Landing Screen (First-time visitors) -->
        <div
          id="landing-screen"
          class="relative flex min-h-screen flex-col items-center justify-start overflow-hidden bg-cover bg-center bg-no-repeat pt-8 md:justify-center xl:pt-0"
          style={`background-image: url(${airplaneBackground.src})`}
        >
          <div class="absolute inset-0 bg-terminal-dark-gray/40"></div>

          <div
            class="relative z-10 mx-auto flex max-w-4xl flex-col px-8 text-center"
          >
            <div class="mb-6 mt-6 flex justify-center md:mb-12 md:mt-0">
              <div
                class="flex h-48 w-48 items-center justify-center rounded-full border-8 border-white bg-gradient-to-br from-terminal-blue to-blue-600 shadow-2xl"
              >
                <img
                  src={profilePhotoUrl}
                  alt={profilePhotoAlt}
                  width="192"
                  height="192"
                  class="rounded-full object-contain"
                />
              </div>
            </div>

            <header class="mb-16">
              <h1
                class="mb-6 text-5xl font-bold text-terminal-white drop-shadow-lg sm:text-6xl md:text-7xl"
              >
                Lucas Silbernagel
              </h1>
              <p
                class="mb-4 text-3xl font-semibold text-terminal-yellow drop-shadow-lg md:text-4xl"
              >
                Software Developer
              </p>
              <p
                class="font-terminal text-xl text-terminal-white/90 drop-shadow"
              >
                Toronto, Canada
              </p>
            </header>

            <div class="mb-12 flex items-center justify-center md:mb-0 md:mt-6">
              <button class="group block" id="check-in-button">
                <span
                  class="kiosk-button inline-block px-20 py-12 text-4xl font-bold uppercase text-white md:text-5xl"
                  >Check in</span
                >
              </button>
            </div>
          </div>
        </div>

        <!-- Homepage (Returning visitors) -->
        <div id="homepage" class="hidden">
          <h1 class="sr-only">Lucas Silbernagel - Software Developer</h1>
          <Header id="homepage-header" showBackButton={false} />
          <div
            class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800"
          >
            <div
              class="container relative z-10 mx-auto min-h-screen px-4 py-12 sm:px-8"
            >
              <div
                class="mx-auto grid max-w-7xl grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
              >
                <HomepageCard
                  href="/about"
                  iconName="mdi:information"
                  title="Information"
                />
                <HomepageCard
                  href="/tech-stack"
                  iconName="mdi:bag-suitcase"
                  title="Luggage"
                />
                <HomepageCard
                  href="/experience"
                  iconName="mdi:place"
                  title="Destinations"
                />
                <HomepageCard
                  href="/projects"
                  iconName="mdi:airplane-takeoff"
                  title="Flights"
                />
                <HomepageCard
                  href="/contact"
                  iconName="mdi:account-help"
                  title="Help"
                />
                <HomepageCard
                  id="boarding-pass-download"
                  iconName="mdi:ticket-account"
                  title="Print Boarding Pass"
                  titleSize="text-3xl"
                  dataResumeUrl={resumeUrl || ''}
                  dataResumeFilename={resumeFileName}
                />
                <HomepageCard href="/map" iconName="mdi:map" title="Map" />
              </div>
            </div>
          </div>
        </div>
      </main>

      <Footer id="homepage-footer" class="hidden" />
    </div>

    <!-- Loading Overlay displayed while printing resume -->
    <div
      id="loading-overlay"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-terminal-dark-gray/95 backdrop-blur-sm"
    >
      <div class="flex flex-col items-center gap-4">
        <div
          class="h-16 w-16 animate-spin rounded-full border-4 border-terminal-blue border-t-transparent"
        >
        </div>
        <p
          class="font-terminal text-xl uppercase tracking-wider text-terminal-yellow"
        >
          Printing...
        </p>
      </div>
    </div>
  </body>
</html>

<script>
  // Animation timing constants
  const TILE_ANIMATION_DELAY_MS = 150
  const RENDER_DELAY_MS = 10
  const LOADING_OVERLAY_DURATION_MS = 2000
  const BLOB_URL_REVOKE_DELAY_MS = 100

  // First-time visitor logic
  document.addEventListener('DOMContentLoaded', () => {
    const landingScreen = document.querySelector('#landing-screen')
    const homepage = document.querySelector('#homepage')
    const homepageHeader = document.querySelector('#homepage-header')
    const homepageFooter = document.querySelector('#homepage-footer')
    const hasVisited = sessionStorage.getItem('checked-in')

    // Check if user has visited before
    if (hasVisited === 'true') {
      // Show homepage for returning visitors
      if (landingScreen) {
        ;(landingScreen as HTMLElement).classList.add('hidden')
      }
      if (homepage) {
        homepage.classList.remove('hidden')
      }
      if (homepageHeader) homepageHeader.classList.remove('hidden')
      if (homepageFooter) homepageFooter.classList.remove('hidden')

      // Reset tiles to initial state and then animate
      const tiles = document.querySelectorAll('.kiosk-tile')
      for (const tile of tiles) {
        ;(tile as HTMLElement).style.opacity = '0'
        ;(tile as HTMLElement).style.transform = 'translateY(30px)'
      }

      // Initialize homepage animations after a brief delay to ensure initial state is rendered
      setTimeout(() => {
        animateTiles()
      }, RENDER_DELAY_MS)
    } else {
      // Show landing screen for first-time visitors (already visible by default)
      if (landingScreen) {
        ;(landingScreen as HTMLElement).classList.remove('hidden')
      }
      if (homepage) {
        homepage.classList.add('hidden')
      }
      if (homepageHeader) homepageHeader.classList.add('hidden')
      if (homepageFooter) homepageFooter.classList.add('hidden')
    }

    // Initialize landing screen interactions
    initializeLandingScreen()

    // Initialize homepage interactions (boarding pass button handler)
    initializeHomepageHandlers()
  })

  function initializeLandingScreen() {
    const checkInButton = document.querySelector('#check-in-button')

    // Check-in button click handler
    if (checkInButton) {
      checkInButton.addEventListener('click', (e) => {
        e.preventDefault()
        // Mark as visited and show homepage
        sessionStorage.setItem('checked-in', 'true')
        const landingScreen = document.querySelector('#landing-screen')
        const homepage = document.querySelector('#homepage')
        const homepageHeader = document.querySelector('#homepage-header')
        const homepageFooter = document.querySelector('#homepage-footer')

        if (landingScreen) {
          ;(landingScreen as HTMLElement).classList.add('hidden')
        }
        if (homepage) {
          homepage.classList.remove('hidden')
        }
        if (homepageHeader) homepageHeader.classList.remove('hidden')
        if (homepageFooter) homepageFooter.classList.remove('hidden')

        // Reset tiles to initial state and then animate
        const tiles = document.querySelectorAll('.kiosk-tile')
        for (const tile of tiles) {
          ;(tile as HTMLElement).style.opacity = '0'
          ;(tile as HTMLElement).style.transform = 'translateY(30px)'
        }

        // Initialize homepage animations after a brief delay to ensure initial state is rendered
        setTimeout(() => {
          animateTiles()
        }, RENDER_DELAY_MS)
      })
    }
  }

  function animateTiles() {
    // Check if user prefers reduced motion
    const prefersReducedMotion = window.matchMedia(
      '(prefers-reduced-motion: reduce)'
    ).matches

    const tiles = document.querySelectorAll('.kiosk-tile')

    for (const [index, tile] of tiles.entries()) {
      if (prefersReducedMotion) {
        // Skip animation, show immediately
        ;(tile as HTMLElement).style.opacity = '1'
        ;(tile as HTMLElement).style.transform = 'translateY(0)'
      } else {
        // Stagger animation on load
        setTimeout(() => {
          ;(tile as HTMLElement).style.opacity = '1'
          ;(tile as HTMLElement).style.transform = 'translateY(0)'
        }, index * TILE_ANIMATION_DELAY_MS)
      }
    }
  }

  function initializeHomepageHandlers() {
    // Boarding pass download handler
    const boardingPassButton = document.querySelector('#boarding-pass-download')
    const loadingOverlay = document.querySelector('#loading-overlay')

    if (boardingPassButton && loadingOverlay) {
      boardingPassButton.addEventListener('click', async () => {
        const resumeUrl = (boardingPassButton as HTMLElement).dataset.resumeUrl
        const resumeFilename =
          (boardingPassButton as HTMLElement).dataset.resumeFilename ||
          'lucas-silbernagel-resume.pdf'

        if (!resumeUrl) {
          // eslint-disable-next-line no-console
          console.error('Resume URL not available')
          return
        }

        loadingOverlay.classList.add('flex')
        loadingOverlay.classList.remove('hidden')

        try {
          // Fetch the file as a blob to ensure it downloads instead of opening
          const response = await fetch(resumeUrl)
          if (!response.ok) {
            throw new Error(`Failed to fetch resume: ${response.statusText}`)
          }

          const blob = await response.blob()
          const blobUrl = URL.createObjectURL(blob)

          // Create download link with blob URL
          const link = document.createElement('a')
          link.href = blobUrl
          link.download = resumeFilename
          document.body.append(link)
          link.click()
          link.remove()
          // Clean up blob URL after a short delay
          setTimeout(() => {
            URL.revokeObjectURL(blobUrl)
          }, BLOB_URL_REVOKE_DELAY_MS)

          // Hide overlay after delay (download continues in background)
          setTimeout(() => {
            loadingOverlay.classList.add('hidden')
            loadingOverlay.classList.remove('flex')
          }, LOADING_OVERLAY_DURATION_MS)
        } catch (error) {
          // eslint-disable-next-line no-console
          console.error('Error downloading resume:', error)
          loadingOverlay.classList.add('hidden')
          loadingOverlay.classList.remove('flex')
        }
      })
    }
  }
</script>

<style>
  .kiosk-tile {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.3s ease-in-out;
  }

  .group:hover .kiosk-tile {
    transform: translateY(-5px);
  }

  @media (prefers-reduced-motion: reduce) {
    .kiosk-tile {
      transition: none;
    }

    .group:hover .kiosk-tile {
      transform: none;
    }
  }
</style>
