---
import '../styles/global.css'
import airplaneBackground from '../assets/airplane-background.jpg'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import HomepageCard from '../components/HomepageCard.astro'
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="Astro" />
    <meta
      name="description"
      content="Personal website and software development portfolio for Lucas Silbernagel"
    />
    <title>Lucas Silbernagel | Software Developer</title>

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Preload critical background image -->
    <link rel="preload" as="image" href={airplaneBackground.src} />
  </head>
  <body class="bg-terminal-dark-gray font-sans text-terminal-white antialiased">
    <div class="flex flex-col min-h-screen">
      <main class="flex-1">
        <!-- Landing Screen (First-time visitors) -->
        <div
          id="landing-screen"
          class="relative flex flex-col justify-center items-center bg-cover bg-no-repeat bg-center pt-12 xl:pt-0 min-h-screen overflow-hidden"
          style={`background-image: url(${airplaneBackground.src})`}
        >
          <div class="absolute inset-0 bg-terminal-dark-gray/40"></div>

          <div
            class="z-10 relative flex flex-col mx-auto px-8 max-w-4xl text-center"
          >
            <div
              class="flex justify-center items-center order-1 md:order-3 md:mt-6 mb-12 md:mb-0"
            >
              <button class="group block" id="check-in-button">
                <span
                  class="inline-block px-20 py-12 font-bold text-white text-4xl md:text-5xl uppercase kiosk-button"
                  >Check in</span
                >
              </button>
            </div>

            <header class="order-2 mb-16">
              <h1
                class="drop-shadow-lg mb-6 font-bold text-terminal-white text-5xl sm:text-6xl md:text-7xl"
              >
                Lucas Silbernagel
              </h1>
              <p
                class="drop-shadow-lg mb-4 font-semibold text-terminal-yellow text-3xl md:text-4xl"
              >
                Software Developer
              </p>
              <p
                class="drop-shadow font-terminal text-terminal-white/90 text-xl"
              >
                Toronto, Canada
              </p>
            </header>

            <div
              class="flex justify-center order-3 md:order-1 mt-6 md:mt-0 md:mb-12"
            >
              <div
                class="flex justify-center items-center bg-gradient-to-br from-terminal-blue to-blue-600 shadow-2xl border-8 border-white rounded-full w-48 h-48"
              >
                <img
                  src="https://placehold.co/600x600"
                  alt="Lucas Silbernagel"
                  width="192"
                  height="192"
                  class="rounded-full object-contain"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Homepage (Returning visitors) -->
        <div id="homepage" class="hidden">
          <h1 class="sr-only">Lucas Silbernagel - Software Developer</h1>
          <Header id="homepage-header" showBackButton={false} />
          <div
            class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 min-h-screen"
          >
            <div
              class="z-10 relative mx-auto px-4 sm:px-8 py-12 min-h-screen container"
            >
              <div
                class="gap-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mx-auto max-w-7xl"
              >
                <HomepageCard
                  href="/about"
                  iconName="mdi:information"
                  title="Information"
                />
                <HomepageCard
                  href="/tech-stack"
                  iconName="mdi:bag-suitcase"
                  title="Luggage"
                />
                <HomepageCard
                  href="/experience"
                  iconName="mdi:place"
                  title="Destinations"
                />
                <HomepageCard
                  href="/projects"
                  iconName="mdi:airplane-takeoff"
                  title="Flights"
                />
                <HomepageCard
                  href="/contact"
                  iconName="mdi:account-help"
                  title="Help"
                />
                <HomepageCard
                  id="boarding-pass-download"
                  iconName="mdi:ticket-account"
                  title="Print Boarding Pass"
                  titleSize="text-3xl"
                />
                <HomepageCard href="/map" iconName="mdi:map" title="Map" />
              </div>
            </div>
          </div>
        </div>
      </main>

      <Footer id="homepage-footer" class="hidden" />
    </div>

    <!-- Loading Overlay displayed while printing resume -->
    <div
      id="loading-overlay"
      class="hidden z-50 fixed inset-0 justify-center items-center bg-terminal-dark-gray/95 backdrop-blur-sm"
    >
      <div class="flex flex-col items-center gap-4">
        <div
          class="border-4 border-terminal-blue border-t-transparent rounded-full w-16 h-16 animate-spin"
        >
        </div>
        <p
          class="font-terminal text-terminal-yellow text-xl uppercase tracking-wider"
        >
          Printing...
        </p>
      </div>
    </div>
  </body>
</html>

<script>
  // Animation timing constants
  const TILE_ANIMATION_DELAY_MS = 150
  const RENDER_DELAY_MS = 10
  const LOADING_OVERLAY_DURATION_MS = 2000

  // First-time visitor logic
  document.addEventListener('DOMContentLoaded', () => {
    const landingScreen = document.querySelector('#landing-screen')
    const homepage = document.querySelector('#homepage')
    const homepageHeader = document.querySelector('#homepage-header')
    const homepageFooter = document.querySelector('#homepage-footer')
    const hasVisited = sessionStorage.getItem('portfolio-visited')

    // Check if user has visited before
    if (hasVisited === 'true') {
      // Show homepage for returning visitors
      if (landingScreen) {
        ;(landingScreen as HTMLElement).classList.add('hidden')
      }
      if (homepage) {
        homepage.classList.remove('hidden')
      }
      if (homepageHeader) homepageHeader.classList.remove('hidden')
      if (homepageFooter) homepageFooter.classList.remove('hidden')

      // Reset tiles to initial state and then animate
      const tiles = document.querySelectorAll('.kiosk-tile')
      for (const tile of tiles) {
        ;(tile as HTMLElement).style.opacity = '0'
        ;(tile as HTMLElement).style.transform = 'translateY(30px)'
      }

      // Initialize homepage animations after a brief delay to ensure initial state is rendered
      setTimeout(() => {
        animateTiles()
      }, RENDER_DELAY_MS)
    } else {
      // Show landing screen for first-time visitors (already visible by default)
      if (landingScreen) {
        ;(landingScreen as HTMLElement).classList.remove('hidden')
      }
      if (homepage) {
        homepage.classList.add('hidden')
      }
      if (homepageHeader) homepageHeader.classList.add('hidden')
      if (homepageFooter) homepageFooter.classList.add('hidden')
    }

    // Initialize landing screen interactions
    initializeLandingScreen()

    // Initialize homepage interactions (boarding pass button handler)
    initializeHomepageHandlers()
  })

  function initializeLandingScreen() {
    const checkInButton = document.querySelector('#check-in-button')

    // Check-in button click handler
    if (checkInButton) {
      checkInButton.addEventListener('click', (e) => {
        e.preventDefault()
        // Mark as visited and show homepage
        sessionStorage.setItem('portfolio-visited', 'true')
        const landingScreen = document.querySelector('#landing-screen')
        const homepage = document.querySelector('#homepage')
        const homepageHeader = document.querySelector('#homepage-header')
        const homepageFooter = document.querySelector('#homepage-footer')

        if (landingScreen) {
          ;(landingScreen as HTMLElement).classList.add('hidden')
        }
        if (homepage) {
          homepage.classList.remove('hidden')
        }
        if (homepageHeader) homepageHeader.classList.remove('hidden')
        if (homepageFooter) homepageFooter.classList.remove('hidden')

        // Reset tiles to initial state and then animate
        const tiles = document.querySelectorAll('.kiosk-tile')
        for (const tile of tiles) {
          ;(tile as HTMLElement).style.opacity = '0'
          ;(tile as HTMLElement).style.transform = 'translateY(30px)'
        }

        // Initialize homepage animations after a brief delay to ensure initial state is rendered
        setTimeout(() => {
          animateTiles()
        }, RENDER_DELAY_MS)
      })
    }
  }

  function animateTiles() {
    const tiles = document.querySelectorAll('.kiosk-tile')

    for (const [index, tile] of tiles.entries()) {
      // Stagger animation on load
      setTimeout(() => {
        ;(tile as HTMLElement).style.opacity = '1'
        ;(tile as HTMLElement).style.transform = 'translateY(0)'
      }, index * TILE_ANIMATION_DELAY_MS)
    }
  }

  function initializeHomepageHandlers() {
    // Boarding pass download handler
    const boardingPassButton = document.querySelector('#boarding-pass-download')
    const loadingOverlay = document.querySelector('#loading-overlay')

    if (boardingPassButton && loadingOverlay) {
      boardingPassButton.addEventListener('click', () => {
        loadingOverlay.classList.add('flex')
        loadingOverlay.classList.remove('hidden')

        // Start download immediately while overlay is showing
        const link = document.createElement('a')
        link.href = '/resume.pdf'
        link.download = 'lucas-silbernagel-resume.pdf'
        document.body.append(link)
        link.click()
        link.remove()

        // Hide overlay after delay (download continues in background)
        setTimeout(() => {
          loadingOverlay.classList.add('hidden')
          loadingOverlay.classList.remove('flex')
        }, LOADING_OVERLAY_DURATION_MS)
      })
    }
  }
</script>

<style>
  .kiosk-tile {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.3s ease-in-out;
  }

  .group:hover .kiosk-tile {
    transform: translateY(-5px);
  }
</style>
